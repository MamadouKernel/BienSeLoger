{% extends 'layout.kmphtml.twig' %}
{% block title %}Mes Propriétés | BIENSELOGER{% endblock %}
{% block contenu %}

    <div class="page-head">
        <div class="container">
            <div class="row">
                <div class="page-head-content">
                    <h1 class="page-title">Mes Propriétés chez Bienseloger</h1>
                </div>
            </div>
        </div>
    </div>
    <!-- End page header -->

    <!-- property area -->
    <div class="content-area recent-property" style="background-color: #FFF;">
        <div class="container">
            <div class="row">

                <div class="col-md-9 pr-30 padding-top-40 properties-page user-properties">

                    <div class="section">
                        <div class="page-subheader sorting pl0 pr-10">


                            <ul class="sort-by-list pull-left">

                            </ul><!--/ .sort-by-list-->

                            <div class="items-per-page pull-right">

                            </div><!--/ .items-per-page-->
                        </div>

                    </div>
                    {% if message == 'success' %}
                        <div class="alert alert-success" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span></button>
                            <i class="fa fa-check fa-2x" style="font-size: 16"></i> {{ message_success }}
                        </div>
                    {% elseif message == 'echec' %}
                        <div class="alert alert-danger" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span></button>
                            <i class="fa fa-close fa-2x" style="font-size: 16"></i> {{ message_echec }}
                        </div>

                    {% endif %}
                    <div class="section">
                        <div id="list-type" class="proerty-th-list">
                            {% for property in propri_by_agen %}
                            <div class="col-md-4 p0">
                                <div class="box-two proerty-item">
                                    <div class="item-thumb">
                                        <a href="/detail_propriete?id={{ property.idT_PRODUIT }}" ><img src="files/proprietes/{{ property.ImageP }}"></a>
                                    </div>
                                    <div class="item-entry overflow">
                                        <h5><a href="/detail_propriete?id={{ property.idT_PRODUIT }}"> {{ property.Title }} </a></h5>
                                        <h5 class="pull-right" style="background-color: #FDC600; font-size: 16px; font-weight: bold">{% if property.Etat == 1 %} Vente {% elseif property.Etat == 0 %} Louer{% endif %}</h5>
                                        <div class="dot-hr"></div>
                                        <br>
                                        <span class="pull-left"><b> Superficie :</b> {{ property.Espaces }}m<sup>2</sup> </span>
                                        <span class="proerty-price pull-right"> {{ property.Prix| format_currency('XOF') }}</span>
                                        <p style="display: none;">{{ property.Desciption|u.truncate(100,'...')}}</p>
                                        <div class="property-icon">
                                            <img src="public/assets/img/icon/bed.png"> ({{ property.Nb_chambres }}) |
                                            <img src="public/assets/img/icon/shawer.png">({{ property.Salle_bain }})|
                                            <img src="public/assets/img/icon/cars.png">({{ property.Garages }})

                                            <div class="dealer-action pull-right">
                                                <a href="/edit_property?edit={{ property.idT_PRODUIT }}" class="button">Modifier </a>
                                                <a href="?del={{ property.idT_PRODUIT }}" class="button delete_user_car">Supprimer</a>
                                                <a href="/detail_propriete?id={{ property.idT_PRODUIT }}" class="button">Afficher</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>

                <div class="col-md-3 p0 padding-top-40">
                    <div class="blog-asside-right">
                        <div class="panel panel-default sidebar-menu wow fadeInRight animated" >
                            <div class="panel-heading">
                                <h3 class="panel-title">Bonjour {{ log_con[0].NomPrenom }}</h3>
                            </div>
                            <div class="panel-body search-widget">
                                <span><i class="fa fa-contao" style="color:violet;"></i> {{ log_con[0].DescriptionAge }} </span><br>
                                <span><i class="fa fa-envelope" style="color:violet;"></i> {{ log_con[0].Email }} </span><br>
                                <span><i class="fa fa-phone" style="color:violet;"></i> {{ log_con[0].Tel }} </span><br>
                                <span><i class="fa fa-location-arrow" style="color:violet;"></i> {{ log_con[0].CommuneAge }} </span><br>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}